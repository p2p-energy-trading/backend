REDIS_PASSWORD=

# MinIO/S3 Configuration (for telemetry archival)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# Telemetry Configuration
