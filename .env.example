# Wallet Encryption
WALLET_ENCRYPTION_KEY=your-wallet-encryption-key

# Energy Settlement Configuration
AUTO_SETTLEMENT_ENABLED=true
SETTLEMENT_THRESHOLD_WH=100
CONVERSION_RATIO_WH_TO_ETK=1
